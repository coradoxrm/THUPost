
<div class="middle-box text-center loginscreen animated fadeInDown">
  <div>
    <div>

      <h1 class="logo-name">THUPost</h1>

    </div>
    <h3>Register to THUPost</h3>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'm-t',:role => 'form'}) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.email_field :email, class: 'form-control',placeholder: 'Email' %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: 'form-control',placeholder: 'password' %>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, class: 'form-control',placeholder: 'password_confirmation' %>
    </div>
    <%= f.submit 'Sign up', :class => 'btn btn-sm btn-primary btn-block' %>
    </br>
    <p class="text-muted text-center"><small>Already have an account?</small></p>
    <a class="btn btn-sm btn-white btn-block" href="<%= new_user_session_path %>">Login</a>
    <% end %>
  </div>
</div>
