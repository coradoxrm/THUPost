<div class="wrapper wrapper-content animated fadeInRight">

    <h2>我买的</h2>

</div>

<div class="row">
    <div class="col-lg-12">

          <div class="wrapper wrapper-content animated fadeInRight">
              <div class="row">
                <% @orders.each do |o| %>
                  <div class="col-md-3">
                      <div class="ibox">
                          <div class="ibox-content product-box">

                              <div class="product-imitation">
                                  [ INFO ]
                              </div>
                              <div class="product-desc">
                                          <span class="product-price">
                                              出价：<%= o.price %>
                                          </span>
                                  <small class="text-muted">Category</small>
                                  <a href="#" class="product-name"> Product <%= o.product.title %></a>



                                  <div class="small m-t-xs">
                                      <%= o.product.description %>
                                  </div>
                                  <div class="m-t text-righ">

                                      <a href="<%= product_path(o.product) %>" class="btn btn-xs btn-outline btn-primary">Info <i class="fa fa-long-arrow-right"></i> </a>
                                  </div>
                              </div>
                          </div>
                      </div>
                  </div>

                  <% end %>
              </div>
        </div>
    </div>
</div>
