<div class="wrapper wrapper-content animated fadeInRight">

  <div class="row">
    <div class="col-lg-12">
      <div class="slick_demo">
        <div>
          <div class="ibox-content">
            <div class="image"><img src="/images/003.jpg" ,style="width: 100%"/></div>
          </div>
        </div>
        <div>
          <div class="ibox-content">
            <div class="image"><img src="/images/001.jpeg"/></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <h2>Recent Posts</h2>
  <div class="row">
    <div class="col-lg-12">

      <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">

          <% @products.each do |e|%>
          <div class="col-md-3">
            <div class="ibox">
              <div class="ibox-content product-box">
                <div class="product-imitation">
                  <a href=""><img alt="image" src="<%= e.photo0.url(:thumb) %>" style = "width:100%"></a>
                </div>
                <div class="product-desc">
                  <span class="product-price">
                    $<%= e.price %>
                  </span>
                  <a href="<%= product_path(e) %>" class="product-name pname"> <%= e.title %></a>

                  <div class="small m-t-xs ptext">
                    <%= e.description.length > 20 ? e.description[0,20]+"..." : e.description %>
                    <!-- truncate(e.description.length, length: 17) -->
                  </div>

                </div>
              </div>
            </div>
          </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>


<script>
$(function(){
  $('.slick_demo').slick(
    {
      dots:true
    }
  );
});
</script>
