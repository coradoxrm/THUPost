<div class="wrapper wrapper-content animated fadeInRight">

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>个人信息 <small>With custom checbox and radion elements.</small></h5>
            </div>
            <div class="ibox-content">
                <%= form_for @user, html: {class: "form-horizontal"},url: {action: "edit"} do |f| %>

                  <div class="form-group"><label class="col-sm-2 control-label">清华邮箱</label>
                      <div class="col-sm-10"><input class="form-control"  value="<%= @user.email %>" disabled ></input></div>
                  </div>
                  <div class="hr-line-dashed"></div>
                    <div class="form-group"><label class="col-sm-2 control-label">昵称</label>
                        <div class="col-sm-10"><input type="text" name="nickname" class="form-control" value="<%= @user.nickname %>"></div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group"><label class="col-sm-2 control-label">联系电话</label>
                        <div class="col-sm-10"><input type="text" name="phone" class="form-control" value="<%= @user.phone %>">
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group"><label class="col-sm-2 control-label">微信</label>
                        <div class="col-sm-10"><input type="text" name="wechat" class="form-control" value="<%= @user.wechat %>">
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group"><label class="col-sm-2 control-label">住址</label>
                        <div class="col-sm-10"><input type="text" name="address" class="form-control" value="<%= @user.address %>">
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>


                    
                    <%= f.file_field :avatar %>

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            <button class="btn btn-white" type="submit">Cancel</button>
                            <button class="btn btn-primary" type="submit">Save changes</button>
                        </div>
                    </div>

                    

                <% end %>
            </div>
        </div>
    </div>
</div>

</div>
