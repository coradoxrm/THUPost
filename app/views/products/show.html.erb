<div class="wrapper wrapper-content animated fadeInRight">

  <div class="row">
    <div class="col-lg-12">

      <div class="ibox product-detail">
        <div class="ibox-content">

          <div class="row">
            <div class="col-md-5">

              <div class="slick_demo">

                <div>
                  <div class="image-imitation">
                    [IMAGE 1]
                  </div>
                </div>
                <div>
                  <div class="image-imitation">
                    [IMAGE 2]
                  </div>
                </div>
                <div>
                  <div class="image-imitation">
                    [IMAGE 3]
                  </div>
                </div>


              </div>

            </div>
            <div class="col-md-7">

              <h2 class="font-bold m-b-xs">
                <%= @product.title %>
              </h2>

              <div class="m-t-md">
                <h2 class="product-main-price">$<%= @product.price %></h2>
              </div>
              <hr>

              <h4>Product description</h4>

              <div class="small text-muted">
                <%= @product.description %>

                <br/>
                <br/>

              </div>

              <hr>

              <div>
                <div class="btn-group">
                  <button class="btn btn-white btn-sm"><i class="fa fa-star"></i> 加入收藏 </button>

                </div>
              </div>
            </div>
          </div>

        </div>
        <div class="ibox-footer">
          <span class="pull-right">
            Full stock - <i class="fa fa-clock-o"></i> 14.04.2016 10:04 pm
          </span>
          The generated Lorem Ipsum is therefore always free
        </div>
      </div>

    </div>
  </div>
  <div class="row">
    <div clas="col-lg-12">
      <div class="ibox">
        <div class="ibox-title">
          <h5>出价表</h5>
        </div>
        <div class="ibox-content">

            <%= form_for @order, html: {class: "form-horizontal"}, url: {action: "create", controller: 'orders'} do |f| %>

              <div class="form-group">
                <label class="col-sm-2 control-label">评论</label>
                <div class="col-sm-10"><textarea rows="3" class="form-control" name="description"></textarea></div>
              </div>
              <div class="form-group">
                <label class="col-sm-offset-6 col-sm-2 control-label">出价</label>
                <div class="col-sm-4">
                    <div class="input-group">
                        <input type="text" class="form-control" name="price">
                        <span class="input-group-btn">
                          <button type="submit" class="btn btn-primary">Go!</button>
                        </span>
                    </div>
                  </div>
              </div>

            <% end %>
            <div class="hr-line-dashed"></div>

            <%= render partial: 'order_list', locals: {product: @product} %>
        </div>
      </div>
    </div>
  </div>
</div>


<script>
$(function(){
  $('.slick_demo').slick(
    {
      dots:true
    }
  );
});
</script>
