<div class="wrapper wrapper-content animated fadeInRight">

  <h2>标签 <strong><%= @search_content %></strong> 的结果</h2>
  <div class="row">
    <div class="col-lg-12">

      <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">

          <% @products.each do |e|%>
          <div class="col-md-3">
            <div class="ibox">
              <div class="ibox-content product-box">
                <div class="product-imitation">
                  <a href=""><img alt="image" src="<%= e.photo0.url(:thumb) %>" style = "width:100%"></a>
                </div>
                <div class="product-desc">
                  <span class="product-price">
                    $<%= e.price %>
                  </span>
                  <a href="<%= product_path(e) %>" class="product-name pname"> <%= e.title %></a>

                  <div class="small m-t-xs ptext">
                    <%= e.description.length > 20 ? e.description[0,20]+"..." : e.description %>
                  </div>

                </div>
              </div>
            </div>
          </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
  <% if(@lastpage != 0) %>

  <div class="pull-right">

  <% if(@page > 1) %>
    <%= link_to "上一页", tag_product_path(:query => @search_content, :page => @page-1), class: "btn btn-success btn-lg" %>
  <%end%>

    &nbsp; <span> <strong> <%= @page %> / <%= @lastpage %> </strong></span> &nbsp;

  <% if(@page != @lastpage) %>
    <%= link_to "下一页", tag_product_path(:query => @search_content, :page => @page+1), class: "btn btn-success btn-lg" %>
  <%end%>
  </div>
  <%else%>
  <h2 style="text-align: center;">抱歉，没有结果</h2>

<%end%>
</div>
