<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2><%= @tag_name %></h2>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
      <% @products.each do |e|%>
      <div class="col-md-3">
        <div class="ibox">
          <div class="ibox-content product-box">
            <div class="product-imitation">
              <a href=""><img alt="image" src="<%= e.photo0.url(:thumb) %>" style = "width:100%"></a>
            </div>
            <div class="product-desc">
              <span class="product-price">
                $<%= e.price %>
              </span>
              <a href="<%= product_path(e) %>" class="product-name pname"> <%= e.title %></a>

              <div class="small m-t-xs ptext">
                <%= e.description.length > 20 ? e.description[0,20]+"..." : e.description %>
              </div>

            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
</div>
