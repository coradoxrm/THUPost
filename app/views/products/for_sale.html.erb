<div class="wrapper wrapper-content animated fadeInRight">
  <div class="pull-right"><a type="button" class="btn btn-w-m btn-primary btn-lg" href="<%= new_product_path %>">我要卖东西</a></div>
  <h2>我卖的</h2>
</div>

<div class="wrapper wrapper-content animated fadeInRight">

<% @products.each do |e| %>
<div class="vote-item">
    <div class="row">

      <div class="col-md-1">
          <a href="<%= product_path(e)%>"><img alt="image" src= <%= e.photo0.url(:thumb) %> height="70" width="70"></a>
      </div>

        <div class="col-md-8">

            <a href="<%= product_path(e)%>" class="vote-title">
                <%= e.title %>
            </a>
            <div class="vote-info">
                <i class="fa fa-comments-o"></i> Orders (<%= e.orders.count %>)&nbsp
                <i class="fa fa-clock-o"></i>Update at (<%= e.updated_at %>)&nbsp
                <!-- <i class="fa fa-user"></i> <a href="#"></a> -->
            </div>
        </div>

        <div class="col-md-3 button-f ">
          <div class="button-c">
            <%if e.status!=2%>
              <button class="btn btn-success btn-lg selled_btn" name = <%= e.id %> >已卖出</button>
            <%else%>
              <button class="btn btn-primary btn-lg selled_btn" disabled="disabled" >成功出售</button>
            <%end%>
            <button class="btn btn-danger btn-lg cancel_btn" name = <%= e.id %> >删&nbsp &nbsp除</button>&nbsp

          </div>
        </div>



        <!-- <div class="col-md-1 ">
            <div class="vote-icon">
                <a class="expand-btn" data-target-id="<%= e.id %>"><i class="fa fa-sort-desc"> </i></a>
            </div>
        </div> -->
    </div>
</div>

<!-- <div class="vote-item sub-order-list" id="sub-<%= e.id %>">
    <div class="row">
      <%= render partial: "order_list", locals: {product: e} %>
    </div>
</div> -->
<% end %>


</div>

<script>
$(function(){
  $(".sub-order-list").hide();
  $(".expand-btn").click(function() {
    var btn = $(this);
    $(".sub-order-list").hide('fast');
    var target_id = btn.data('target-id');
    $('#sub-' + target_id).toggle('fast');
  });
});


$(function(){
  $('.cancel_btn').click(function() {
    $.ajax({
              type: "POST",
              url: "/products/remove",
              data: {id : $(this).attr("name")},
              dataType: "json",
              success: function(data){
                location=location;
              }
            });
  }
  );

  $('.selled_btn').click(function() {
    $.ajax({
              type: "POST",
              url: "/products/selled",
              data: {id : $(this).attr("name")},
              dataType: "json",
              success: function(data){
                location=location;
              }
            });
  }
  );
});

</script>
