<div class="wrapper wrapper-content animated fadeInRight">

  <h2>搜索 <strong><%= @search_content %></strong> 的结果</h2>
  <div class="row">
    <div class="col-lg-12">

      <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">

          <% @products.each do |e|%>
          <div class="col-md-2">
            <div class="ibox">
              <div class="ibox-content product-box">
                <div class="product-imitation">
                  <a href=""><img alt="image" src="<%= e.photo0.url(:thumb) %>" style = "width:100%"></a>
                </div>
                <div class="product-desc">
                  <span class="product-price">
                    $<%= e.price %>
                  </span>
                  <a href="<%= product_path(e) %>" class="product-name pname"> <%= e.title %></a>

                  <div class="small m-t-xs ptext">
                    <%= e.description.length > 20 ? e.description[0,20]+"..." : e.description %>
                  </div>

                  <%if e.status == 0%>
                    <span class="label label-primary">正在出售</span>
                  <%elsif e.status == 1%>
                    <span class="label label-warning">正在联系</span>
                  <%elsif e.status == 2%>
                    <span class="label label-danger">已卖出</span>
                  <%end%>

                </div>
              </div>
            </div>
          </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>

  <div class="pull-right">

  <% if(@page > 1) %>
    <%= link_to "上一页", search_product_path(:query => @search_content, :page => @page-1), class: "btn btn-success btn-lg" %>
  <%end%>
  &nbsp; <span> <strong> <%= @page %> / <%= @lastpage %> </strong></span> &nbsp;
  <% if(@page != @lastpage) %>
    <%= link_to "下一页", search_product_path(:query => @search_content, :page => @page+1), class: "btn btn-success btn-lg" %>
  <%end%>

</div>
</div>
