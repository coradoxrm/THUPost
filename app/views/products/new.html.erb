<div class="wrapper wrapper-content animated fadeInRight">

<div >
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h3>添加商品</h3>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <div class="col-sm-7 b-r">

                        <%= form_for @product, url: {action: "create"} do |f| %>

                            <div class="form-group"><label>商品名称</label>
                              <input type="text" placeholder="30字以内" name="title" class="form-control"></div>

                            <div class="form-group"><label>标签</label>
                                  <div class="input-group">
                                      <select data-placeholder="Choose a tag..." class="chosen-select" multiple style="width:350px;" tabindex="4">
                                          <option value="">Select</option>
                                          <option value="United States">United States</option>
                                          <option value="United Kingdom">United Kingdom</option>
                                          <option value="Afghanistan">Afghanistan</option>
                                      </select>
                                    </div>
                            </div>

                            <div class="form-group"><label>最低价格</label> <input type="text" name="price" class="form-control"></div>
                            <div class="form-group">
                              <label >Comment</label>
                              <textarea type="text" rows="3" name="description" class="form-control"></textarea>
                            </div>
                            <div>
                                <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong>提交</strong></button>
                            </div>
                        <% end %>
                    </div>
                    <div class="col-sm-5"><h4>上传图片</h4>
                        <p>You can create an account:</p>
                        <p class="text-center">
                            <a href=""><i class="fa fa-sign-in big-icon"></i></a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<% content_for :javascript do %>

<script type="text/javascript">


$(window).load(function() {

    $('.chosen-select').chosen({});

});

</script>

<% end %>
